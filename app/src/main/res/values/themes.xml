<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Listed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/medium_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AllLinksSearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/magnifying_glass_icon</item>
        <item name="queryHint">Search</item>
        <item name="android:textSize">14sp</item>
        <item name="iconPadding">0dp</item>
        <item name="queryBackground">@drawable/all_links_custom_search_background</item>
    </style>
    

</resources>